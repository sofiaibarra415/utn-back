<div class="container" style="margin:50px auto">
  <div class="row">
    <div class="col-6 offset-3">
      <h4>Modificar</h4>
      <form method="post" action="/admin/novedades/modificar" enctype="multipart/form-data">
        <input type="hidden" value="{{novedad.id}}" name="id">
        <div class="form-group">
          <input type="text" placeholder="Nombre" value="{{novedad.nombre}}" class="form-control" name="nombre">
        </div>
        <div class="form-group">
          <textarea type="text" placeholder="Testimonio" class="form-control" name="testimonio">{{novedad.testimonio}}</textarea>
        </div>
        <div class="form-group">
          <p>
            <label>Imagen: <input type="file" name="imagen" id="imagen"/></label>
          </p>
          <p>
            <label><input type="checkbox" name="img_delete" id="img_delete" value="1"/>Â¿Eliminar imagen actual?</label>
            <input type="hidden" name="img_original" value="{{novedad.img_id}}">
          </p>
        </div>
        <button type="submit" class="btn btn-primary">Modificar</button>
      </form>
      {{#if error}} <h5>{{message}}</h5> {{/if}}
    </div>
  </div>
</div>